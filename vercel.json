{
  "version": 2,
  "functions": {
    "api/*.js": { "runtime": "nodejs22.x" }
  },
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "api/ping.js",  "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/ping", "dest": "/api/ping.js" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ]
}
